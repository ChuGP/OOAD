package uml_generator;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Font;
import java.awt.Color;
import javax.swing.JTextField;
import javax.swing.JLabel;
import java.awt.GridBagLayout;
import java.awt.GridBagConstraints;
import java.awt.Insets;
import java.awt.GridLayout;
import java.awt.FlowLayout;
import java.awt.SystemColor;
import java.awt.Window.Type;

public class uml_GUI extends JFrame {

	private JPanel contentPane;
	private JTextField textName;
	private JTextField textVariable;
	private JTextField textType;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					uml_GUI frame = new uml_GUI();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public uml_GUI() {
		setType(Type.POPUP);
		setTitle("      \t\tUML_GENERATOR");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(1000, 800, 1098, 929);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(10, 10, 10, 10));
		setContentPane(contentPane);
		
		JButton btnRead = new JButton("Read Name");
		btnRead.setBounds(515, 51, 202, 44);
		btnRead.setBackground(new Color(240, 240, 240));
		btnRead.setFont(new Font("Arial", Font.PLAIN, 26));
		
		btnRead.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				System.out.println(textName.getText());
				textName.setText(null);
				
			}
		});
		contentPane.setLayout(null);
		
		
		// Label
		JLabel className = new JLabel("Class Name");
		className.setBounds(65, 48, 141, 56);
		className.setFont(new Font("Arial", Font.PLAIN, 26));
		contentPane.add(className);
		
		JLabel memberVariable = new JLabel("Member Variable");
		memberVariable.setFont(new Font("Arial", Font.PLAIN, 26));
		memberVariable.setBounds(20, 189, 202, 44);
		contentPane.add(memberVariable);
		// Label
		
		// 輸入Class Name的textarea
		textName = new JTextField();
		textName.setFont(new Font("新細明體", Font.PLAIN, 40));
		textName.setBounds(230, 48, 266, 50);
		contentPane.add(textName);
		textName.setColumns(20);
		contentPane.add(btnRead);
		
		// 輸入Member Variable的textarea
		textVariable = new JTextField();
		textVariable.setFont(new Font("新細明體", Font.PLAIN, 40));
		textVariable.setBounds(230, 117, 266, 50);
		contentPane.add(textVariable);
		textVariable.setColumns(10);
		
		JButton btnReadVariable = new JButton("Read Variable");
		btnReadVariable.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				System.out.println(textVariable.getText());
				textVariable.setText(null);
				System.out.println(textType.getText());
				textType.setText(null);
				
			}
		});
		btnReadVariable.setFont(new Font("Arial", Font.PLAIN, 26));
		btnReadVariable.setBackground(SystemColor.menu);
		btnReadVariable.setBounds(515, 117, 202, 119);
		contentPane.add(btnReadVariable);
		
		JLabel VariableType = new JLabel("Variable Type");
		VariableType.setFont(new Font("Arial", Font.PLAIN, 26));
		VariableType.setBounds(44, 123, 178, 44);
		contentPane.add(VariableType);
		
		textType = new JTextField();
		textType.setFont(new Font("新細明體", Font.PLAIN, 40));
		textType.setColumns(10);
		textType.setBounds(230, 186, 266, 50);
		contentPane.add(textType);
		
		
	}
}
