package uml_generator;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Font;
import java.awt.Color;
import javax.swing.JTextField;
import javax.swing.JLabel;
import java.awt.GridBagLayout;
import java.awt.GridBagConstraints;
import java.awt.Insets;
import java.awt.GridLayout;
import java.awt.FlowLayout;

public class uml_GUI extends JFrame {

	private JPanel contentPane;
	private JTextField textName;
	private JTextField textVariable;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					uml_GUI frame = new uml_GUI();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public uml_GUI() {
		setTitle("UML_GENERATOR");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(1000, 800, 1098, 929);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(10, 10, 10, 10));
		setContentPane(contentPane);
		
		JButton btnRead = new JButton("Read");
		btnRead.setBounds(521, 51, 94, 116);
		btnRead.setBackground(new Color(240, 240, 240));
		btnRead.setFont(new Font("Arial", Font.PLAIN, 20));
		
		btnRead.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				System.out.println(textName.getText());
				System.out.println(textVariable.getText());
			}
		});
		contentPane.setLayout(null);
		
		
		// Label
		JLabel className = new JLabel("Class Name");
		className.setBounds(46, 51, 141, 56);
		className.setFont(new Font("Arial", Font.PLAIN, 26));
		contentPane.add(className);
		
		JLabel memberVariable = new JLabel("Member Variable");
		memberVariable.setFont(new Font("Arial", Font.PLAIN, 26));
		memberVariable.setBounds(12, 122, 202, 44);
		contentPane.add(memberVariable);
		// Label
		
		// 輸入Class Name的textarea
		textName = new JTextField();
		textName.setFont(new Font("新細明體", Font.PLAIN, 50));
		textName.setBounds(220, 48, 266, 50);
		contentPane.add(textName);
		textName.setColumns(20);
		contentPane.add(btnRead);
		
		// 輸入Member Variable的textarea
		textVariable = new JTextField();
		textVariable.setFont(new Font("新細明體", Font.PLAIN, 50));
		textVariable.setBounds(220, 117, 266, 50);
		contentPane.add(textVariable);
		textVariable.setColumns(10);
		
		
	}
}
