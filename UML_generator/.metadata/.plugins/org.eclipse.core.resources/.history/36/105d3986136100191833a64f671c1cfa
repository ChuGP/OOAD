	public void getTable_SetToMap()
	{
		int row = Variable_table.getModel().getRowCount();
		int column = Variable_table.getModel().getColumnCount();
		Object selected;
		boolean out = false ;
		for (int i=0; i < row; i++)
		{
		  String reference="", variable_type="", variable_name="";
		  for (int j=0; j < column; j++)
		  {
			selected = Variable_table.getModel().getValueAt(i,j);
		    if ( selected != null)
		    {
			  if ( j == 0 )
				  reference = selected.toString();
			  else if ( j == 1 )
				  variable_type = selected.toString();
			  else variable_name = selected.toString();
			  System.out.println(selected.toString());
//			  textShowDetail.append(selected.toString());
		    }
		  }
		  
		  variable_Detail gp = new variable_Detail(reference, variable_type, variable_name);
		  Variable_list.put(gp._variable_name__getter(), gp);
	}
	
	
	
	
